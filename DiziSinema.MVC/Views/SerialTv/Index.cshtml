@model List<SerialTvViewModel>

<div class="container py-5">
</div>
<!-- Portfolio Item-->
@foreach (var s in Model)
{
    <div class="container">
        <div class="row">
            <div class="card bg-black m-3">
            <img src="http://localhost:4100/images/SerialTvs/@s.ImageUrl" class="img-fluid">
                <h4>@s.SerName</h4>
                <p>@s.SerIntro</p>
                <a href="http://localhost:4100/images/SerialTvs/@s.ImageUrl"><i class="bi bi-zoom-in"></i></a>
                <a asp-area="" asp-controller="SerialTv" asp-action="Detail" asp-route-id="@s.Id" class="details-link"><i typeof="button" class="btn btn-primary">Detay</i></a>
            </div>
        </div>
    </div>

    <!-- End Portfolio Item -->
}