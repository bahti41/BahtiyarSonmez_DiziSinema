@model List<SerialTvMainViewModel>

@foreach (var s in Model)
{
    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-product">
        <img src="http://localhost:4100/images/SerialTvs/@s.ImageUrl" class="img-fluid">
        <div class="portfolio-info">
            <h4>@s.SerName</h4>
            <p>@s.SerIntro</p>
            <a href="http://localhost:4100/images/SerialTvs/@s.ImageUrl" title="Product 1" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
            <a asp-area="" asp-controller="SerialTv" asp-action="Detail" asp-route-id="@s.Id" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
        </div>
    </div>

    <!-- End Portfolio Item -->
} 