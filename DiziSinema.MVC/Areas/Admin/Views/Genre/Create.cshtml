@model AddGenreViewModel
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <h1>Yeni Ürün</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <form
                        asp-area="Admin"
                        asp-controller="Genre"
                        asp-action="Create"
                        method="post"
                        enctype="multipart/form-data"
                    >
                    <!--Ürün Bilgileri-->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Ürün Bilgileri</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="GenreName"></label>
                                            <input asp-for="GenreName" type="text" class="form-control" placeholder="Ürün adını giriniz...">
                                            <span asp-validation-for="GenreName" class="text-danger"></span>
                                        </div>
                                    </div>
                                  
                                    <div class="col-sm-6">
                                        <label>Seçenekler</label>
                                        <div class="form-group d-flex">
                                            <div class="icheck-primary">
                                                <input asp-for="IsActive" type="checkbox" />
                                                <label asp-for="IsActive" for="IsActive"></label>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-sm-12">
                                        <label asp-for="Description"></label>
                                       <div>
                                            <textarea class="w-50 " style="height:100px" asp-for="Description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                       </div>
                                      
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles{
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}

@section Scripts{

